@model dynamic
@{
    ViewData["Title"] = "Search Results";
    string searchType = ViewBag.SearchType as string;
    var isFlightOnly = searchType == "FlightOnly";
    var results = Model as IEnumerable<dynamic>;
    var hasResults = results != null && results.Any();
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Search Results</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col">
            <h2>Search Results</h2>
            <hr />
        </div>
    </div>

    @if (!hasResults)
    {
        <div class="alert alert-info shadow-sm" role="alert">
            <h4 class="alert-heading">No results found!</h4>
            <p>We couldn't find any @(isFlightOnly ? "flights" : "flight + hotel packages") matching your search criteria.</p>
            <hr>
            <p class="mb-0">Please try different source and destination locations.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-bordered table-striped bg-white mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Flight ID</th>
                        <th>Flight Name</th>
                        @if (isFlightOnly)
                        {
                            <th>Flight Type</th>
                        }
                        <th>Source</th>
                        <th>Destination</th>
                        @if (!isFlightOnly)
                        {
                            <th>Hotel Name</th>
                        }
                        <th>Total Cost (â‚¹)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in results)
                    {
                        <tr>
                            <td>@item.FlightId</td>
                            <td>@item.FlightName</td>
                            @if (isFlightOnly)
                            {
                                <td><span class="badge bg-secondary">@item.FlightType</span></td>
                            }
                            <td>@item.Source</td>
                            <td>@item.Destination</td>
                            @if (!isFlightOnly)
                            {
                                <td>@item.HotelName</td>
                            }
                            <td class="fw-bold text-success">@item.TotalCost.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="row mt-4">
        <div class="col">
            <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i> Back to Search</a>
        </div>
    </div>
</div>
